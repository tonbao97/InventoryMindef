<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inventory.View.Scan.ScanPage">

    <ContentPage.Content>
        <StackLayout>

            <AbsoluteLayout>
                <Image
                        BackgroundColor="Gray"
                        AbsoluteLayout.LayoutBounds="0.5,0.1,200,200"
                        AbsoluteLayout.LayoutFlags="PositionProportional"
                        x:Name="PictureTaken"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand"
                />
                <!-- I want the picture here to show the picture taken of the item, the picture should be a bindable image-->
            </AbsoluteLayout>
            
            <Label Text="" x:Name="ScannedCode" TextColor="Red" HorizontalOptions="Center"/>
            <StackLayout Padding="30,10,30,10">
                <Button Text="New Scan" Clicked="ScanButton_Clicked"/>
                <Label Text="Please scan the item barcode/QR code or enter the serial number" TextColor="Black" HorizontalOptions="Center" FontSize="Medium" HorizontalTextAlignment="Center"/>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>

</ContentPage>