                            <th>
                                @Html.DisplayNameFor(model => model.Staff.MobileNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Staff.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateCreated)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsConfirmed)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Staff.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Staff.IdentityNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Staff.Designation)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Staff.MobileNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Staff.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateCreated)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsConfirmed)
                                </td>
                                <td>
                                    @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) 
                                    @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
