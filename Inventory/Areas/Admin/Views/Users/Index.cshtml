<div class="row gutters">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
        <div class="card custom-bdr">
            <div class="card-header">Users</div>
            <div class="card-body">
                <table id="fixedHeader" class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Staff.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Staff.IdentityNo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Staff.Designation)
