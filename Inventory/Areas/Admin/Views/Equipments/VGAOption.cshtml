@model Inventory.Areas.Admin.Models.AddingEquipmentModel
@Html.LabelFor(model => model.VGAOptionID, "VGAOptionID", htmlAttributes: new { @class = "control-label col-md-2" })
<div class="col-md-10">
    @Html.DropDownList("VGAOptionID", null, "Please select", htmlAttributes: new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.VGAOptionID, "", new { @class = "text-danger" })
</div>
<div class="col-md-10">
    <input type="text" id="NewVGAOptionName" name="VGAOptionName" placeholder="New Option" class="form-control col-md-4" />
    <button type="submit" id="AddVGAOption">Add New</button>
</div>


