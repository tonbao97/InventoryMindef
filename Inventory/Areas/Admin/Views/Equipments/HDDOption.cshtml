@model Inventory.Areas.Admin.Models.AddingEquipmentModel
@Html.LabelFor(model => model.HDDOptionID, "HDDOptionID", htmlAttributes: new { @class = "control-label col-md-2" })
<div class="col-md-10">
    @Html.DropDownList("HDDOptionID", null, "Please select", htmlAttributes: new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.HDDOptionID, "", new { @class = "text-danger" })
</div>
<div class="col-md-10">
    <input type="text" id="NewHDDOptionName" name="HDDOptionName" placeholder="New Option" class="form-control col-md-4" />
    <button type="submit" id="AddHDDOption">Add New</button>
</div>


